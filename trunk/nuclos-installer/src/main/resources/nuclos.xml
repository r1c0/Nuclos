<nuclos>
	<server>
		<home>${server.home}</home>
		<!-- do not change server name for existing installations -->
		<name>${server.name}</name>
		<http>
			<enabled>${server.http.enabled}</enabled>
			<port>${server.http.port}</port>
		</http>
		<https>
			<enabled>${server.https.enabled}</enabled>
			<port>${server.https.port}</port>
			<keystore>
				<file>${server.https.keystore.file}</file>
				<password>${server.https.keystore.password}</password>
			</keystore>
		</https>
		<shutdown-port>${server.shutdown.port}</shutdown-port>
		<heap-size>${server.heap.size}</heap-size>
		<java-home>${server.java.home}</java-home>
		<launch-on-startup>${server.launch.on.startup}</launch-on-startup>
	</server>
	<client>
		<singleinstance>${client.singleinstance}</singleinstance>
	</client>
	<database>
		<adapter>${database.adapter}</adapter>
		<driver>${database.driver}</driver>
		<driverjar>${database.driverjar}</driverjar>
		<connection-url>${database.connection.url}</connection-url>
		<username>${database.username}</username>
		<password>${database.password}</password>
		<schema>${database.schema}</schema>
		<tablespace>${database.tablespace}</tablespace>
		<tablespace-index>${database.tablespace.index}</tablespace-index>
	</database>
</nuclos>