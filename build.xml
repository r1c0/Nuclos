			<fileset dir="${nucleus.conf.dir}" file="${nucleus.conf.dir}/nuclos-version.properties"/>
			<manifest>
				<attribute name="Manifest-Version" value="1.0"/>
                <attribute name="Main-Class" value="org.nuclos.installer.Main"/>
